# ======================================
# INSURANCE MANAGEMENT SYSTEM - ENV CONFIG
# ======================================

# Application
NODE_ENV=development
PORT=3002

# Database Configuration
DB_URI=mongodb://localhost:27017/insurance_db
# OR
MONGO_URI=mongodb://localhost:27017/insurance_db

# For Docker/Production with authentication
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme
MONGO_DB_NAME=insurance_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
TokenSignIn=your-super-secret-jwt-key-change-this-in-production
authBearerToken=Bearer

# Password Hashing
saltRound=10

# Admin User (for migrations)
ADMIN_NAME=System Admin
ADMIN_EMAIL=admin@insurance.com
ADMIN_PASSWORD=Admin@123456

# Cloudinary (File Upload)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Tranzila Payment Gateway
TRANZILA_TERMINAL_NAME=your-terminal-name
TRANZILA_API_KEY=your-api-key

# SMS Configuration (Optional)
SMS_API_KEY=
SMS_API_SECRET=

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3002

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=10

# Session
SESSION_SECRET=your-session-secret-key

# Logging
LOG_LEVEL=info
